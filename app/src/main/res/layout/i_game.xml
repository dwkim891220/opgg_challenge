<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.text.TextUtils"/>
        <import type="com.example.opgg.models.client.OpBadge"/>
        <variable
            name="data"
            type="com.example.opgg.models.client.CGame" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/v_top_padding"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/pale_grey_two"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/v_bg_win"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@{data.isWin ? @color/soft_blue : @color/darkish_pink}"
            app:layout_constraintStart_toStartOf="@id/tv_game_length"
            app:layout_constraintTop_toBottomOf="@id/v_top_padding"
            app:layout_constraintEnd_toEndOf="@id/tv_game_length"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/tv_display_win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{data.isWin ? @string/win : @string/lose}"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_game_length"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tv_game_length"
            app:layout_constraintBottom_toTopOf="@id/v_divider_win"
            app:layout_constraintVertical_chainStyle="packed"/>
        <View
            android:id="@+id/v_divider_win"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="@color/white_40"
            app:layout_constraintStart_toStartOf="@id/tv_display_win"
            app:layout_constraintTop_toBottomOf="@id/tv_display_win"
            app:layout_constraintEnd_toEndOf="@id/tv_display_win"
            app:layout_constraintBottom_toTopOf="@id/tv_game_length"/>
        <TextView
            android:id="@+id/tv_game_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@{data.gameLength}"
            android:textSize="12sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_divider_win"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/iv_champion"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@id/tv_game_length"
            app:layout_constraintTop_toTopOf="parent"
            bind:glideUrl="@{data.champion.imageUrl}"
            bind:circleCrop="@{true}"/>
        <View
            android:id="@+id/v_champion_bottom_space"
            android:layout_width="1dp"
            android:layout_height="15dp"
            app:layout_constraintStart_toStartOf="@id/iv_champion"
            app:layout_constraintEnd_toEndOf="@id/iv_champion"
            app:layout_constraintBottom_toBottomOf="@id/iv_champion"/>
        <TextView
            android:id="@+id/tv_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingTop="3dp"
            android:paddingEnd="4dp"
            android:paddingBottom="3dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/iv_champion"
            app:layout_constraintTop_toTopOf="@id/v_champion_bottom_space"
            app:layout_constraintEnd_toEndOf="@id/iv_champion"
            bind:show="@{data.opBadge != OpBadge.None}"
            bind:opBadge="@{data.opBadge}" />
        <include
            android:id="@+id/l_spells_runes"
            layout="@layout/l_spells_runes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            bind:spell1imageUrl="@{data.spellImageUrls[0]}"
            bind:spell2imageUrl="@{data.spellImageUrls[1]}"
            bind:rune1imageUrl="@{data.runeImageUrls[0]}"
            bind:rune2imageUrl="@{data.runeImageUrls[1]}"
            app:layout_constraintStart_toEndOf="@id/iv_champion"
            app:layout_constraintTop_toTopOf="@id/iv_champion" />
        <TextView
            android:id="@+id/tv_kda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/dark_grey"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/l_spells_runes"
            app:layout_constraintTop_toTopOf="@id/iv_champion"
            app:layout_constraintBottom_toTopOf="@id/tv_contributionKillRate"
            app:layout_constraintVertical_chainStyle="packed"
            bind:displayKDA="@{data.kda}"/>
        <TextView
            android:id="@+id/tv_contributionKillRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@{@string/displayContributionKillRate(data.contributionKillRate)}"
            android:textColor="@color/gunmetal"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tv_kda"
            app:layout_constraintTop_toBottomOf="@id/tv_kda"
            app:layout_constraintBottom_toBottomOf="@id/iv_champion"/>
        <include
            android:id="@+id/l_items"
            layout="@layout/l_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="@id/iv_champion"
            app:layout_constraintTop_toBottomOf="@id/iv_champion"
            app:layout_constraintBottom_toBottomOf="parent"
            bind:data="@{data.itemImageUrls}"/>
        <TextView
            android:id="@+id/tv_game_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@{data.gameType}"
            android:textSize="12sp"
            android:textColor="@color/cool_grey"
            app:layout_constraintTop_toTopOf="@id/iv_champion"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@{data.displayCreateTime}"
            android:textSize="12sp"
            android:textColor="@color/cool_grey"
            app:layout_constraintTop_toBottomOf="@id/tv_game_type"
            app:layout_constraintEnd_toEndOf="@id/tv_game_type"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/r_bg_multikill"
            android:paddingStart="8dp"
            android:paddingTop="5dp"
            android:paddingEnd="8dp"
            android:paddingBottom="5dp"
            android:text="@{data.multiKillString}"
            android:textSize="10sp"
            android:textColor="@color/darkish_pink"
            app:layout_constraintTop_toTopOf="@id/l_items"
            app:layout_constraintEnd_toEndOf="@id/tv_game_type"
            app:layout_constraintBottom_toBottomOf="@id/l_items"
            bind:show="@{!TextUtils.isEmpty(data.multiKillString)}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>