<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.example.opgg.viewmodels.MainViewModel" />
        <variable
            name="data"
            type="com.example.opgg.models.client.CSummoner" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:glideUrl="@{data.imageUrl}"
            bind:circleCrop="@{true}"/>
        <View
            android:id="@+id/v_profile_bottom_space"
            android:layout_width="1dp"
            android:layout_height="10dp"
            app:layout_constraintStart_toStartOf="@id/iv_profile"
            app:layout_constraintEnd_toEndOf="@id/iv_profile"
            app:layout_constraintBottom_toBottomOf="@id/iv_profile"/>
        <TextView
            android:id="@+id/tv_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingStart="6dp"
            android:paddingTop="3dp"
            android:paddingEnd="6dp"
            android:paddingBottom="3dp"
            android:background="@drawable/r_summoner_level"
            android:text="@{data.level}"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/iv_profile"
            app:layout_constraintTop_toTopOf="@id/v_profile_bottom_space"
            app:layout_constraintEnd_toEndOf="@id/iv_profile"
            tools:text="247"/>
        <LinearLayout
            android:id="@+id/l_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/iv_profile"
            app:layout_constraintTop_toTopOf="@id/iv_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/iv_profile">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@{data.name}"
                android:textColor="@color/dark_grey"
                android:textSize="22sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="GenetoryGenetoryGenetoryGenetoryGenetory"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/r_btn_refresh"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:text="전적갱신"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:onClick="@{() -> viewModel.refresh()}"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_league_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:clipToPadding="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:scrollbars="none"
            android:overScrollMode="never"
            tools:listitem="@layout/i_league"
            tools:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="3"
            app:layout_constraintTop_toBottomOf="@id/tv_badge"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/pale_grey_two"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/rv_league_list"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>